<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <meta charset="utf-8" />
    <style>
        html {
            background-color: #37382F;
            background-image: url(https://2017.awiclass.monoame.com/img/form_ground.svg);
            background-size: 100% auto;
            background-repeat: no-repeat;
            background-position: 0 80%;
            min-height: 100vh;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        form {
            background-color: #3c3e34;
            padding: 30px 100px;
            color: white;
            display: flex;
            flex-direction: column;
            max-width: 600px;
            border-bottom: 5px solid #ed9dce;
            box-shadow: 0px 0px 50px rgba(0, 0, 0, 0.3);
            letter-spacing: 1px;
        }

            form img {
                width: 120px;
                margin-left: auto;
                margin-right: auto;
            }

            form > * {
                margin-bottom: 15px;
            }

            form h2 {
                font-weight: normal;
                text-align: center;
                margin-bottom: 20px;
            }

            form h3 {
                font-weight: normal;
                text-align: center;
                margin-bottom: 20px;
            }

            form input, form textarea, form select {
                padding: 8px 15px;
                font-size: 14px;
                border-radius: 0px;
                opacity: 0.9;
                outline: none;
            }

                form input::placeholder, form textarea::placeholder, form select::placeholder {
                    color: rgba(55, 56, 47, 0.5);
                }

            form textarea {
                width: 500px;
            }

            form select, form input[type='radio'] {
                appearance: none;
            }

            form .recommand.sex {
                display: flex;
                align-items: center;
                margin-top: 10px;
                margin-bottom: 20px;
            }

                form .recommand.sex label {
                    margin-right: 40px;
                    margin-left: 5px;
                }

            form input[type='radio'] {
                padding: 0;
                width: 20px;
                height: 20px;
                border: 2px solid white;
                border-radius: 50%;
                cursor: pointer;
                transition: 0.5s;
            }

                form input[type='radio']:checked {
                    background-color: #ed9dce;
                    border-color: #ed9dce;
                }

            form button {
                background-color: transparent;
                padding: 8px;
                color: white;
                cursor: pointer;
            }

                form button:hover {
                    background-color: rgba(255, 255, 255, 0.3);
                }
    </style>

    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script>
        $(".ajaxbtn").click(function (evt) {
            evt.preventDefault()
            post()
        })
        function post() {
            var datas = $("form").serializeArray()
            console.log(datas)
            datas.find(o => o.name == 'json').value = "true"
            $.ajax({
                url: "https://2017.awiclass.monoame.com/api/demo/feedback",

                method: "post",
                data: datas,
                success: function (res) {
                    console.log("ajax result:")
                    console.log(res)
                    $(".feedback").text(res.response)
                    $("button").text("已收到您的意見！感謝您對性平議題的付出")


                }
            })

            $(".ajaxbtn1").click(function (evt) {
                evt.preventDefault()
                post1()
            })
            function post1() {

                var datas = $("form").serializeArray()
                console.log(datas)
                datas.find(o => o.name == 'json').value = "true"

            }

        }
       //<form action="https://2017.awiclass.monoame.com/api/demo/feedback" method="post">
    </script>

</head>
